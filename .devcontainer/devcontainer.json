{
    "image": "mcr.microsoft.com/devcontainers/cpp",
    "customizations": {
        "vscode": {
            "extensions": [
                // Update `../.vscode/extensions.json` as well.
                "albert.tabout",
                "alexanderte.dainty-one-dark-pro-vscode",
                "donjayamanne.githistory",
                "github.copilot",
                "github.copilot-chat",
                "github.copilot-labs",
                "gruntfuggly.todo-tree",
                "leonardssh.vscord",
                "lextudio.restructuredtext",
                "llvm-vs-code-extensions.vscode-clangd",
                "mhutchie.git-graph",
                "ms-vscode.cmake-tools",
                "lextudio.restructuredtext",
                "pkief.material-icon-theme",
                "redhat.vscode-yaml",
                "revng.llvm-ir",
                "trond-snekvik.simple-rst",
                "twxs.cmake",
                "vadimcn.vscode-lldb",
                "wakatime.vscode-wakatime",
                "xaver.clang-format",
                "yzhang.markdown-all-in-one",
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "password": "clangIsBetterThanGCC"
        }
    },
    "forwardPorts": [
        6080
    ],
    "portsAttributes": {
        "6080": {
            "label": "desktop"
        }
    },
    "postStartCommand": "sudo apt update && sudo apt install clang-format -y"
}